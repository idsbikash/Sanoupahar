  <script>
    // Admin functionality
    let clickCount = 0;
    const nameElement = document.getElementById("name");
    const adminPanel = document.getElementById("adminPanel");
    let selectedColor = "#1a5276";

    // Color selection
    const colorOptions = document.querySelectorAll('.color-option');
    colorOptions.forEach(option => {
      option.addEventListener('click', () => {
        // Remove selected class from all options
        colorOptions.forEach(opt => opt.classList.remove('selected'));
        
        // Add selected class to clicked option
        option.classList.add('selected');
        
        // Update selected color
        selectedColor = option.getAttribute('data-color');
        document.getElementById('titleColor').value = selectedColor;
      });
    });

    // Activate admin panel
    nameElement.addEventListener('click', () => {
      clickCount++;
      if (clickCount >= 5) {
        const password = prompt("Enter Admin Password:");
        if (password === "bikashdaimugiho") {
          adminPanel.style.display = 'block';
          alert("✅ Admin Mode Activated!");
          window.scrollTo({ top: document.getElementById('adminPanel').offsetTop, behavior: 'smooth' });
        } else {
          alert("❌ Wrong Password!");
        }
        clickCount = 0;
      }
    });

    // Toggle post expansion
    function togglePost(postId) {
      const post = document.getElementById(postId);
      post.classList.toggle('post-expanded');
      
      const button = post.querySelector('.read-more');
      if (post.classList.contains('post-expanded')) {
        button.textContent = 'Read Less';
      } else {
        button.textContent = 'Read Full Story';
      }
    }

    // Add new post
    function addPost() {
      const title = document.getElementById('postTitle').value;
      const content = document.getElementById('postContent').value;
      const imageUrl = document.getElementById('postImage').value;
      const color = document.getElementById('titleColor').value;

      if (!title || !content) {
        alert("Please enter title and content.");
        return;
      }

      const postId = 'post-' + Date.now();
      
      const postElement = document.createElement('div');
      postElement.classList.add('post', 'fade-in');
      postElement.id = postId;
      
      // Format current date
      const currentDate = new Date();
      const formattedDate = currentDate.toLocaleDateString('en-US', { 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric' 
      });

      postElement.innerHTML = `
        <div class="post-image-container">
          <img src="${imageUrl || 'https://placehold.co/600x400/1a5276/ffffff?text=News+Update'}" alt="${title}" class="post-image">
        </div>
        <div class="post-content">
          <h3 class="post-title" style="color: ${color}">${title}</h3>
          <span class="post-date">${formattedDate}</span>
          <p class="post-excerpt">${content.substring(0, 150)}...</p>
          <div class="post-full-content">
            <p>${content}</p>
          </div>
          <button class="read-more" onclick="togglePost('${postId}')">Read Full Story</button>
        </div>
      `;

      document.getElementById('postsContainer').prepend(postElement);
      clearForm();
      
      alert("Post published successfully!");
    }

    // Clear form
    function clearForm() {
      document.getElementById('postTitle').value = '';
      document.getElementById('postContent').value = '';
      document.getElementById('postImage').value = '';
      
      // Reset color selection to default
      colorOptions.forEach(opt => opt.classList.remove('selected'));
      document.querySelector('.color-option[data-color="#1a5276"]').classList.add('selected');
      document.getElementById('titleColor').value = '#1a5276';
      selectedColor = '#1a5276';
    }

    // Add some sample posts on initial load
    window.addEventListener('DOMContentLoaded', () => {
      const samplePosts = [
        {
          title: "Exposing Corruption in Infrastructure Projects",
          content: "New evidence reveals how officials have been siphoning funds from critical infrastructure projects. We've obtained documents showing how at least 40% of allocated funds for road construction in rural areas have been diverted to private accounts. The evidence points to a network of officials and contractors working together to exploit development budgets. We demand a full investigation and accountability for those responsible. This is just one example of the systemic corruption that plagues our nation's development initiatives.",
          image: "https://placehold.co/600x400/e74c3c/ffffff?text=Corruption+Exposé",
          color: "#e74c3c",
          date: "May 15, 2025"
        },
        {
          title: "Our Vision for Education Reform",
          content: "Education is the foundation of our future. Our comprehensive plan will ensure every Nepali child has access to quality education, regardless of their background. We propose: 1) Increasing education budget allocation to 20% of national budget, 2) Teacher training programs focused on modern pedagogy, 3) Technology integration in all public schools, 4) Scholarship programs for disadvantaged students, and 5) Curriculum reform to include critical thinking and civic education. These changes will require political will and citizen support to implement effectively.",
          image: "https://placehold.co/600x400/27ae60/ffffff?text=Education+Reform",
          color: "#27ae60",
          date: "May 10, 2025"
        }
      ];

      samplePosts.forEach((post, index) => {
        const postId = 'sample-post-' + index;
        
        const postElement = document.createElement('div');
        postElement.classList.add('post');
        postElement.id = postId;
        
        postElement.innerHTML = `
          <div class="post-image-container">
            <img src="${post.image}" alt="${post.title}" class="post-image">
          </div>
          <div class="post-content">
            <h3 class="post-title" style="color: ${post.color}">${post.title}</h3>
            <span class="post-date">${post.date}</span>
            <p class="post-excerpt">${post.content.substring(0, 150)}...</p>
            <div class="post-full-content">
              <p>${post.content}</p>
            </div>
            <button class="read-more" onclick="togglePost('${postId}')">Read Full Story</button>
          </div>
        `;

        document.getElementById('postsContainer').appendChild(postElement);
      });
    });
  </script>
